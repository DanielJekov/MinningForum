@model MF.Models.ViewModels.TopicReports.TopicReportViewModel
<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <form asp-controller="TopicReports" asp-action="Create" method="post">
                <div class="form-group">
                    <input class="form-control bg-transparent" value="@Model.Name" readonly />
                    <input type="hidden" name="TopicId" value="@Model.Id" />
                </div>
                <div class="form-group">
                    <textarea  class="form-control" name="Content" placeholder="Describe report reason.." rows="4"></textarea>
                </div>
                <input type="submit" class="btn btn-warning" value="Report" />
            </form>
        </div>
        <div class="col-1"></div>
    </div>
</div>
