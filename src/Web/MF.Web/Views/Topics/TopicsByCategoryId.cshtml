@model ICollection<MF.Models.ViewModels.Topic.TopicOutputViewModel>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <table class="table">
            <thead>
                <tr>
                    <td class="font-weight-bold">Topic</td>
                    <td>
                        <a href="/Category/@ViewBag.CategoryId/Topic/Create" class="btn btn-primary float-md-right">New Topic</a>
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var topic in Model)
                {
                    <tr>
                        <td>
                            <a class="text-dark text-decoration-none text" href="/Category/@ViewBag.CategoryId/Topic/@topic.Id/">@topic.Title</a>
                        </td>
                        <td>
                            <a href="/Category/@ViewBag.CategoryId/Topic/Delete/@topic.Id" class="btn btn-danger float-md-right">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-1"></div>
</div>