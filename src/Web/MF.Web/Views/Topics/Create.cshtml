@model MF.Models.ViewModels.Topic.TopicCreateInputModel
@{ViewData["Title"] = "Create Topic";
}
<div class="row">
    <div class="col-1"></div>
    <div class="col-10">
        <form method="post">
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="Topic name.." />
                <div asp-validation-for="Name" class="small text-danger"></div>
            </div>
            <div class="form-group">
                <textarea asp-for="Content" class="form-control" placeholder="Reply..."></textarea>
                <div asp-validation-for="Content" class="small text-danger"></div>
            </div>

            <input type="submit" class="btn btn-primary" />
        </form>
    </div>
    <div class="col-1"></div>
</div>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>
