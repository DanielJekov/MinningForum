@model MF.Models.ViewModels.Topic.TopicCreateInputModel
@{ViewData["Title"] = "Create Topic";
}
<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<div class="Row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        <form method="post">
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="Topic name.." />
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="Content" class="form-control" placeholder="Reply..."></textarea>
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>

            <input type="submit" class="btn btn-primary" />
        </form>
    </div>
    <div class="col-md-1"></div>
</div>


