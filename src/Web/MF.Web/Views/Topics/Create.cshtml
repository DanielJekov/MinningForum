@model MF.Models.ViewModels.Topics.TopicCreateInputModel
@{ViewData["Title"] = "Create Topic"; }

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<div class="row">
    <div class="col-1"></div>
    <div class="col-10">
        <form asp-controller="Topics" asp-action="Create" method="post">
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="Topic name.." />
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for="CategoryId" name="categoryId" value="@Model.CategoryId" />
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="Content" class="form-control" placeholder="Reply..."></textarea>
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>
            <input type="submit" class="btn btn-success col-12" value="Create" />
        </form>
    </div>
    <div class="col-1"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
