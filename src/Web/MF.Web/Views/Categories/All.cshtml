<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <ol class="breadcrumb decoration-none">
            <li><a asp-controller="Categories" asp-action="All">Categories</a></li>
        </ol>
        <br>
        <table class="table">
            <thead>
                <tr>
                    <td class="font-weight-bold">Categories</td>
                    <td> <a asp-controller="Categories" asp-action="Create" class="btn btn-primary float-md-right">New Category</a></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Topics" asp-action="All" asp-route-categoryId="@category.Id" class="text-dark text-decoration-none">@category.Title</a>
                        </td>
                        <td>
                            <a asp-controller="Categories" asp-action="Delete" asp-route-categoryId="@category.Id" class="btn btn-danger float-md-right">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-2"></div>
</div>    