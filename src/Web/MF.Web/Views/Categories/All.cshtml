<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <td class="font-weight-bold">Categories</td>
                    <td> <a href="/Category/Create" class="btn btn-primary float-md-right">New Category</a></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            <a class="text-dark text-decoration-none text" href="/Category/@category.Id/Topics/">@category.Title</a>
                        </td>
                        <td>
                            <a href="/Category/Delete/@category.Id" class="btn btn-danger float-md-right">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-2"></div>
</div>    