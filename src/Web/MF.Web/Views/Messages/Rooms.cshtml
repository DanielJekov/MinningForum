@model ICollection<MF.Models.ViewModels.Messages.DiscuseViewModel>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <br>
        @if (!Model.Any())
        {
            <h3 class="text-center">There are not any messages.</h3>
        }
        else
        {
            @foreach (var discuse in Model)
            {
                <div class="card-body">
                    @discuse.Content
                    @discuse.CreatedOn
                    @discuse.SenderUsername
                </div><br>
            }
        }
    </div>
    <div class="col-md-1"></div>
</div>