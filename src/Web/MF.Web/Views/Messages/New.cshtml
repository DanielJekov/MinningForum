<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<div class="container-fluid mt-100">
    <div class="Row">
        <div class="col-md-1"></div>
        <div class="col-md-10"></div>
        <div>
            <form method="post">
                <div class="form-group">
                    <div>
                        <label for="receiverId" class="h6">Choose a receiver:</label>
                        <select class="form-select" name="receiverId" id="receiverId">
                            @foreach (var receiver in Model)
                            {
                                <option value=@receiver.ReceiverId class="selector">@receiver.Username</option>
                            }
                        </select>
                    </div>
                    <div>
                        <textarea name="message" id="message" placeholder="Send Message..."></textarea>
                    </div>
                    <input type="submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
